	"require": {
		"php": "^7.4 || ^8.0",
		"ext-json": "*",
		"nette/application": "~2.4|~3.0.0|~3.1.0",
		"nette/forms": "~2.4|~3.0.0|~3.1.0",
		"contributte/recaptcha": "^3.1",
		"nette/di": "~2.4|^3.0.0",
		"nette/utils": "~2.4|~3.0.0|~3.1.0|~3.2.0",
		"pd/utils": "^1.0"
	},
	"require-dev": {
		"nette/tester": "~2.3.2",
		"mockery/mockery": "^1.0",
		"pd/coding-standard": "1.27.*",
		"phpstan/phpstan": "~1.4.0"
	},
	"autoload": {
		"psr-4": {
			"Pd\\Forms\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PdTests\\": "tests"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
